<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.zmm.allproject"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="15"
        android:targetSdkVersion="15" />
    <uses-permission android:name="android.permission.RESTART_PACKAGES"/>
    <uses-permission android:name="android.permission.BROADCAST_STICKY"/>
    <uses-permission android:name="com.zmm.allproject.permission"/>
    <permission android:protectionLevel="normal" android:name="com.zmm.allproject.permission"></permission>

    <application 
        android:name="com.zmm.allproject.mainUI.AllApplication"
        android:process="com.zmm.allproject"
        android:allowBackup="true"
        android:icon="@drawable/ic_icon"
        android:label="@string/app_name"
        >
        <activity
            android:name="com.zmm.allproject.mainUI.MainActivity"
            android:theme="@android:style/Theme.Black.NoTitleBar.Fullscreen"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <activity android:name="com.zmm.allproject.four_big_component.activity_lifecycle.MyPreferenceActivity"></activity>
        <activity android:name="com.zmm.allproject.four_big_component.activity_lifecycle.ActivityForLifecycle" android:label="ActivityForLifecycle"></activity>
        <activity android:name="com.zmm.allproject.four_big_component.activity_lifecycle.LifecycleActivity2" android:label="LifecycleActivity2"></activity>
        <activity 
            android:name="com.zmm.allproject.four_big_component.activity_lifecycle.LifecycleActivity3" 
            android:theme="@android:style/Theme.Dialog"
            android:label="ThemeDialogActivity"
            >
        </activity>
        <activity 
            android:label="ActivityForFragmentLifecycle"
            android:name="com.zmm.allproject.four_big_component.activity_lifecycle.ActivityForFragmentLifecycle"
            >
        </activity>
        <activity 
            android:name="com.zmm.allproject.four_big_component.simpleUI.ForUI"
            android:theme="@style/Theme.Sherlock.Light.DarkActionBar"
            android:label="ForUI"
            >
        </activity>
        <activity 
            android:label="AboutActivity"
            android:name="com.zmm.allproject.mainUI.AboutActivity"></activity>
        <activity 
            android:label="SoftkeyboardAndUserEvent"
            android:name="com.zmm.allproject.four_big_component.simpleUI.SoftkeyboardAndUserEventActivity">
            
        </activity>
        <activity 
            android:label="GestureActivity"
            android:name="com.zmm.allproject.four_big_component.simpleUI.GestureActivity"
            >
            
        </activity>
        <activity 
            android:name="com.zmm.allproject.four_big_component.simpleUI.MatrixAndDrawViewActivity"
            android:label="MatrixAndDrawViewActivity">
            
        </activity>
        <activity 
            android:name="com.zmm.allproject.four_big_component.simpleUI.OrientationEventActivity"
            android:label="OrientationEventActivity">
            
        </activity>
        
        
        <receiver android:name="com.zmm.allproject.four_big_component.BR.MyBroadcaseRecever">
            <intent-filter >
                <action android:name="com.zmm.allproject.MyBroadcaseRecever"/>
                <action android:name="android.intent.action.AIRPLANE_MODE"/>
                <action android:name="android.intent.action.SCREEN_OFF"/>
                
            </intent-filter>
            
        </receiver>
        
        <service 
            android:name="com.zmm.allproject.four_big_component.service.AllService"
            >
            <intent-filter >
                <action android:name="com.zmm.allproject.AllService"/>
                <action android:name="android.intent.action.AIRPLANE_MODE"/>
            </intent-filter>
        </service>
    </application>

</manifest>